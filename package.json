{
  "name": "gemini-quick-chat",
  "version": "1.3.0",
  "description": "An Electron app for quick Gemini chats via keyboard shortcut using webview.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "Electron",
    "Gemini",
    "Chat",
    "AI",
    "Shortcut",
    "Webview"
  ],
  "author": "Ícaro Heimig",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.yourcompany.geminiquickchat",
    "productName": "Gemini Quick Chat",
    "copyright": "Copyright © 2025 ${author}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/app/image.icns",
      "target": "dmg"
    }
  }
}
