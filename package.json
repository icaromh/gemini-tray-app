{
  "name": "gemini-quick-chat",
  "version": "1.5.0",
  "description": "An Electron app for quick Gemini chats via keyboard shortcut using webview.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:main": "jest --testPathPattern=test/main",
    "test:renderer": "jest --testPathPattern=test/renderer"
  },
  "keywords": [
    "Electron",
    "Gemini",
    "Chat",
    "AI",
    "Shortcut",
    "Webview"
  ],
  "author": "Ícaro Heimig",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1",
    "prettier": "^3.0.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "spectron": "^15.0.0"
  },
  "build": {
    "appId": "com.yourcompany.geminiquickchat",
    "productName": "Gemini Quick Chat",
    "copyright": "Copyright © 2025 ${author}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/app/image.icns",
      "target": "dmg"
    }
  },
  "lint-staged": {
    "*.{js,json,md,html,css}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
